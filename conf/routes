# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#make this the first rule
OPTIONS   /*path                  controllers.Application.options(path)

# Home page
GET       /                       controllers.Application.index

# Message
POST      /message                controllers.MessageController.save

GET       /message/:messageId     controllers.MessageController.findById(messageId: String)
PUT       /message/:messageId     controllers.MessageController.update(messageId: String)
DELETE    /message/:messageId     controllers.MessageController.delete(messageId: String)

GET       /message/user/:userId   controllers.MessageController.findAllByRecipient(userId: String)


# Map static resources from the /public folder to the /assets URL path
GET       /assets/*file           controllers.Assets.at(path="/public", file)
